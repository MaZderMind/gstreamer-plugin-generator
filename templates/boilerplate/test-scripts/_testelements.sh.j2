{%- macro testsrc(element) -%}
	{%- if element.mediatype == 'VIDEO' -%}
		videotestsrc
	{%- elif element.mediatype == 'AUDIO' -%}
		audiotestsrc
	{%- else -%}
		filesrc location=/dev/urandom ! application/octet-stream
	{%- endif -%}
{%- endmacro -%}

{%- macro testsink(element) -%}
	{%- if element.mediatype == 'VIDEO' -%}
		autovideosink
	{%- elif element.mediatype == 'AUDIO' -%}
		autoaudiosink
	{%- else -%}
		filesink location=/dev/null
	{%- endif -%}
{%- endmacro -%}

{%- macro testcapsfilter(element) -%}
	{%- if element.mediatype == 'VIDEO' -%}
		video/x-raw,width=320,height=240,framerate=25/1 !
	{%- elif element.mediatype == 'AUDIO' -%}
		audio/x-raw,rate=48000,channels=2
	{%- endif -%}
{%- endmacro -%}
